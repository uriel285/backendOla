<div class="container" style="margin:50px auto">
<div class="row">
    <div class="col-6 offset-3">
        <h4>Modificar el Comentario</h4>
        <form action="/comentarios/modificar" method="post" enctype="multipart/form-data">
        <input type="hidden" value="{{comentarios.id}}" name="id">
        <div class="form-group">
            <input type="text" placeholder="Nombre" value="{{usuarios.name}}" class="form-control" name="usuario">
        </div>
        <div class="form-group">
            <textarea name='puntuacion' class="form-control" placeholder="Puntuacion">{{comentarios.puntuacion}}</textarea>
        </div>
        <div class="form-group">
            <textarea name="comentario" class="form-control" placeholder="Comentario">{{comentarios.comentario}}</textarea>
        </div>
        <div class="form-group">
            <p>
                <label>Imagen: <input type="file" name="imagen" id="imagen"></label>
            </p>
            <p>
                <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label></input>
                <input type="hidden" name="img_original" value="{{novedad.img_id}}">
            </p>
        </div>
        <button type="submit" class="btn btn-primary">Modificar</button>
        </form>
    </div>
</div>
</div>

{{#if error}}
<h5>{{message}}</h5>
{{/if}}